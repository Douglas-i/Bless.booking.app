@rendermode InteractiveServer

<footer class="footer bg-black text-white pt-5 pb-4 px-4">
    <div class="container">
        <div class="row gy-4">
            <!-- Logo y descripción -->
            <div class="col-md-4">
                <img src="/img/bless-logo.png" alt="Bless Barber Shop" class="mb-3" style="width: 120px;" />
                <p class="text-white-50">
                    Bless Barber Shop ofrece servicios profesionales de barbería, cuidado personal y atención al cliente con excelencia. ¡Reserva tu cita hoy mismo!
                </p>
            </div>

            <!-- Navegación -->
            <div class="col-md-2">
                <h5 class="fw-bold mb-3">Enlaces</h5>
                <ul class="list-unstyled text-white-50">
                    <li><a href="#inicio" class="text-white-50 text-decoration-none">Inicio</a></li>
                    <li><a href="#servicios" class="text-white-50 text-decoration-none">Servicios</a></li>
                    <li><a href="#" class="text-white-50 text-decoration-none">Nosotros</a></li>
                    <li><a href="#contacto" class="text-white-50 text-decoration-none">Contacto</a></li>
                </ul>
            </div>

            <!-- Horario -->
            <div class="col-md-3">
                <h5 class="fw-bold mb-3">Horario</h5>
                <ul class="list-unstyled text-white-50">
                    <li>Lunes a &nbsp;&nbsp;&nbsp 9:00 AM - 1:00 PM<br />Sabado: &nbsp;&nbsp;&nbsp 2:00 PM - 7:00 PM</li>
                    <li>Domingo: &nbsp 9:30 AM - 3:00 PM</li>
                </ul>
            </div>

            <!-- Contacto -->
            <div class="col-md-3">
                <h5 class="fw-bold mb-3">Contáctanos</h5>
                <ul class="list-unstyled text-white-50">
                    <li><i class="bi bi-telephone me-2"></i>+505 7746 7334</li>
                    <li><i class="bi bi-envelope me-2"></i>info@blessbarber.com</li>
                    <li><i class="bi bi-geo-alt me-2"></i>Barrio La Fuente, mini agencia Halcón Negro 1/2 cuadra abajo, 46, Managua, Nicaragua</li>
                </ul>
                <button class="btn btn-outline-light btn-sm mt-3 px-3 py-2" @onclick="() => mostrarModal = true">Reservar Cita</button>
            </div>
        </div>

        <!-- Línea inferior -->
        <hr class="border-top border-secondary mt-5" />
        <div class="d-flex justify-content-between flex-column flex-md-row text-white-50">
            <p class="mb-0">&copy; 2025 Bless Barber Shop. Todos los derechos reservados.</p>
            <p class="mb-0">Desarrollado por DevAnts</p>
        </div>
    </div>
</footer>
<AgendarCitaComponent @key="mostrarModal" Visible="@mostrarModal" OnClose="CerrarModal" />
     
@code{
    private bool mostrarModal = false;
    private void CerrarModal()
    {
        mostrarModal = false;
    }
}